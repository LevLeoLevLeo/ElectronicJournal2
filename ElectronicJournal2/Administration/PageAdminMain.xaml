<Page x:Class="ElectronicJournal2.Administration.PageAdminMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicJournal2.Administration"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdminMain">

    <Grid>

        <StackPanel Style="{StaticResource StpHorVerCen}">

            <Button Style="{StaticResource BtnMainProfileMenu}" Content="Электронный журнал" Name="Btn_ChoiceJournal" Click="Btn_ChoiceJournal_Click"/>
            <Button Style="{StaticResource BtnMainProfileMenu}" Content="Добавить оценку" Name="Btn_EvaluationAdd" Click="Btn_EvaluationAdd_Click" Margin="0 10 0 0"/>
            <Button Style="{StaticResource BtnMainProfileMenu}" Content="Добавить студента" Name="Btn_StudentAdd" Click="Btn_StudentAdd_Click" Margin="0 10 0 0"/>

        </StackPanel>

        <Button  Style="{StaticResource BtnDefault}" Name="Btn_LogOut" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10 0 0 10" Content="Выход" Click="Btn_LogOut_Click"/>
        <Button Style="{StaticResource BtnClose}" Name="Btn_CloseApp" Click="Btn_CloseApp_Click"/>

    </Grid>
</Page>
