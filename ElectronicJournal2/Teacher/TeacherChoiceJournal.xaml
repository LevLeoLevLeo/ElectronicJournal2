<Page x:Class="ElectronicJournal2.Teacher.TeacherChoiceJournal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicJournal2.Teacher"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="TeacherChoiceJournal">

    <Grid>

        <StackPanel Style="{StaticResource StpHorVerCen}">

            <StackPanel Style="{StaticResource StpOrienHor}">

                <TextBlock Style="{StaticResource TxbDefault}" Text="Курс:"/>
                <ComboBox Style="{StaticResource CmbDefault}" Name="Cmd_Course" SelectionChanged="Cmd_Course_SelectionChanged"/>

            </StackPanel>

            <StackPanel Style="{StaticResource StpOrienHor}">

                <TextBlock Style="{StaticResource TxbDefault}" Text="Группа:"/>
                <ComboBox Style="{StaticResource CmbDefault}" Name="Cmd_Group"/>

            </StackPanel>

            <StackPanel Style="{StaticResource StpOrienHor}">

                <TextBlock Style="{StaticResource TxbDefault}" Text="Предмет:"/>
                <ComboBox Style="{StaticResource CmbDefault}" Name="Cmd_Subject"/>

            </StackPanel>

            <Button Style="{StaticResource BtnDefault}" Name="Btn_FollowToJournal" HorizontalAlignment="Right" Margin="0 10 5 0" Width="110px" Click="Btn_FollowToJournal_Click" Content="Перейти"/>

        </StackPanel>

    </Grid>

</Page>
